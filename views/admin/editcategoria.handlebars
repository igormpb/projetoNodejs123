{{else}}
{{/each}}
<div class="card-body"> 
    <h1>Editar categoria: </h1>
</div>
<div class="card-body">
    <form action="/admin/categorias/edit" method="POST">
    <input type="hidden" name="id" value="{{categoria._id}}">
        <label for="nome">Nome: </label>
        <input class="form-control" type="text" name="nome" id="nome" placeholder="nome da categoria..." value="{{categoria.nome}}">
        <div class="slug">Slug: </div>
        <input class="form-control" type="text" name="slug" id="slug" placeholder="Slug da categoria" value="{{categoria.slug}}">
        
        <br>
        <button class="btn btn" style="color:white; background-color: rgb(61, 16, 102);">Editar categoria</button>
    </form>
</div>