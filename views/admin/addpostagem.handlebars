
{{#each erros}}
{{texto}}
{{else}}
{{/each}}
<div class="card">
<div class="card-body">
    <h2 style="font-family: sans-serif;"> Postagem: </h2>
    <hr>
    <form action="/admin/postagens/nova" method="POST">
    <label for="titulo">Titulo: </label>
    <input type="text" name="titulo" class="form-control mt-2" required/>
    <label for="slug">Slug: </label>
    <input type="text" name="slug" class="form-control" required/>
    <label for="descricao">Descrição: </label>
    <input type="text" name="descricao" class="form-control" required/>
    <label for="text">Conteúdo: </label>
    <textarea name="conteudo" class="form-control" required></textarea>
    <select name="categoria" class="custom-select mt-2"> 
     {{#each categorias}}
    <option value="{{_id}}">{{nome}}</option>
     {{else}}
    <option value="0">Nenhuma categoria registrada</option>
     {{/each}}
     </select>
     <button class="btn btn mt-2" style="background-color: rgb(61, 16, 102); color:white;">Postar</button>
    </form>
</div>
</div>