{{#each erros}}

<div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<div class="card-body"> 
    <h1>Editar Postagem: </h1>
</div>
<div class="card-body">
    <form action="/admin/postagem/edit" method="POST">
    <input type="hidden" name="id" value="{{postagem._id}}">
       <label for="titulo">Titulo: </label>
    <input type="text" name="titulo" class="form-control mt-2" value="{{postagem.titulo}}" required/>
    <label for="slug"  >Slug: </label>
    <input type="text" name="slug" pattern="[a-z\s]+$" class="form-control" value="{{postagem.slug}}" required/>
    <label for="descricao">Descrição: </label>
    <input type="text" name="descricao" class="form-control" value="{{postagem.descricao}}" required/>
    <label for="text">Conteúdo: </label>
    <textarea name="conteudo" class="form-control"  required>{{postagem.conteudo}}</textarea>
    <select name="categoria" class="custom-select mt-2"> 
     {{#each categorias}}
    <option value="{{_id}}">{{nome}}</option>
     {{else}}
    <option value="0">Nenhuma categoria registrada</option>
     {{/each}}
     </select>
        <button class="btn btn mt-2" style="color:white; background-color: rgb(61, 16, 102);">Editar categoria</button>
    </form>
</div>