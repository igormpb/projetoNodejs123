
<h1>{{categoria.nome}}</h1>
<hr>
{{#each postagens}}
    <div class="card"></div>
    <div class="card-body shadow-lg p-3 mb-5 bg-white rounded">
       
        <h4>{{titulo}}</h4>
        <h6 style="font-size: 16px; font-family: monospace; font-style: oblique;" >{{slug}}</h6>
        <hr>

        <p>{{descricao}}</p>
        <a href="/postagem/{{slug}}"><button class="btn btn" style="background-color: rgb(61, 16, 102); color: white; font-size: 20px; font-family: sans-serif;">leia mais</button></a><br>
        <hr>
        
        <small class="mt-3"style="font-size:15px; font-weight: bolder;">categoria: {{categoria.nome}}</small><br>
        <small >{{data}}</small><br>
       
    </div>
 <hr>
{{else}}

<h1>Nenhuma postagem</h1>

{{/each}}